<Window x:Class="Library.Views.BookEditView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library.Views"
        mc:Ignorable="d"
        xmlns:viewModels="clr-namespace:Library.ViewModels"
        xmlns:models="clr-namespace:Library.Models"
        Title="BookEditView" Height="450" Width="800">

    <Window.DataContext>
        <viewModels:BookEditViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <Style TargetType="{x:Type TextBox}" x:Key="WatermarkedTextBox">
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Margin" Value="0,2,5,2"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Validation.ErrorTemplate">
                <Setter.Value>
                    <ControlTemplate>
                        <StackPanel Orientation="Horizontal">
                            <Border BorderBrush="Red" BorderThickness="1" CornerRadius="2">
                                <AdornedElementPlaceholder/>
                            </Border>
                            <TextBlock Text="{Binding AdornedElement.ActualValidationError.ErrorContent}" Foreground="Red" Margin="5,0,0,0"/>
                        </StackPanel>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="Validation.HasError" Value="true">
                    <Setter Property="ToolTip" Value="{Binding RelativeSource={RelativeSource Self}, Path=(Validation.Errors)[0].ErrorContent}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="{x:Type TextBlock}" x:Key="LabelStyle">
            <Setter Property="Margin" Value="5,0,0,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Text="Title:" Style="{StaticResource LabelStyle}"/>
        <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Book.Title, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True, ValidatesOnExceptions=True}" Style="{StaticResource WatermarkedTextBox}"/>

        <TextBlock Grid.Row="1" Grid.Column="0" Text="Author:" Style="{StaticResource LabelStyle}"/>
        <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Book.Author, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True, ValidatesOnExceptions=True}" Style="{StaticResource WatermarkedTextBox}"/>

        <TextBlock Grid.Row="2" Grid.Column="0" Text="ISBN:" Style="{StaticResource LabelStyle}"/>
        <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding Book.ISBN, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True, ValidatesOnExceptions=True}" Style="{StaticResource WatermarkedTextBox}"/>

        <TextBlock Grid.Row="3" Grid.Column="0" Text="Pub. Year:" Style="{StaticResource LabelStyle}"/>
        <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding Book.PublicationYear, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True, ValidatesOnExceptions=True}" Style="{StaticResource WatermarkedTextBox}"/>

        <TextBlock Grid.Row="4" Grid.Column="0" Text="Genre:" Style="{StaticResource LabelStyle}"/>
        <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding Book.Genre, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True, ValidatesOnExceptions=True}" Style="{StaticResource WatermarkedTextBox}"/>

        <TextBlock Grid.Row="5" Grid.Column="0" Text="Copies:" Style="{StaticResource LabelStyle}"/>
        <TextBox Grid.Row="5" Grid.Column="1" Text="{Binding Book.AvailableCopies, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True, ValidatesOnExceptions=True}" Style="{StaticResource WatermarkedTextBox}"/>

        <Grid Grid.Row="6" Grid.ColumnSpan="2">
        </Grid>

        <StackPanel Grid.Row="7" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Save" Width="80" Margin="0,0,10,0" Command="{Binding SaveCommand}" IsEnabled="{Binding CanSave}"/>
            <Button Content="Cancel" Width="80" Command="{Binding CancelCommand}"/>
        </StackPanel>
    </Grid>
</Window>
