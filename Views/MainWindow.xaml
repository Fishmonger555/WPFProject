<Window x:Class="Library.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library.Views"
        xmlns:viewModels="clr-namespace:Library.ViewModels"
        mc:Ignorable="d"
        Title="Library Management" Height="600" Width="800"
        WindowStartupLocation="CenterScreen">

    <!--<Window.DataContext>
        <viewModels:MainWindowViewModel/>
    </Window.DataContext>-->

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Menu Grid.Row="0" Background="#FFD7D7D7">
            <MenuItem Header="_File">
                <MenuItem Header="_Exit" Command="{Binding ExitCommand}"/>
            </MenuItem>
            <MenuItem Header="_Help">
                <MenuItem Header="_About"/>
            </MenuItem>
        </Menu>

        <Grid Grid.Row="1" Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="5,5,5,10">
                <Button Content="Add Book" Width="100" Margin="0,0,10,0" Command="{Binding AddBookCommand}"/>
                <Button Content="Edit Book" Width="100" Margin="0,0,10,0" Command="{Binding EditBookCommand}" IsEnabled="{Binding CanEditOrDeleteBook}"/>
                <!-- <Button Content="Delete Book" Width="100" Margin="0,0,10,0" Command="{Binding DeleteBookCommand}" IsEnabled="{Binding CanEditOrDeleteBook}"/> -->
            </StackPanel>

            <DataGrid Grid.Row="1" ItemsSource="{Binding Books}"
                    SelectedItem="{Binding SelectedBook, UpdateSourceTrigger=PropertyChanged}"
                    AutoGenerateColumns="False"
                    CanUserAddRows="False"
                    IsReadOnly="True"
                    SelectionMode="Single"
                    GridLinesVisibility="All"
                    HeadersVisibility="Column"
                    CanUserSortColumns="True"
                    CanUserReorderColumns="True"
                    CanUserResizeColumns="True"
                    >
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Title" Binding="{Binding Title}" Width="*"/>
                    <DataGridTextColumn Header="Author" Binding="{Binding Author}" Width="*"/>
                    <DataGridTextColumn Header="ISBN" Binding="{Binding ISBN}" Width="150"/>
                    <DataGridTextColumn Header="Pub. Year" Binding="{Binding PublicationYear}" Width="80"/>
                    <DataGridTextColumn Header="Copies" Binding="{Binding AvailableCopies}" Width="60"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>

        <StatusBar Grid.Row="2" Background="#FFD7D7D7">
            <StatusBarItem>
                <TextBlock Text="{Binding StatusMessage}"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>